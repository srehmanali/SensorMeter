                            <br /><br />
                            <div class="form-group">
                                <label class="control-label col-lg-6">Select Key</label>
                                <div class="col-lg-6">
                                    <select class="form-control"></select>
                                </div>
                            </div>
                            <br /><br />
                            <div class="form-group">
                                <label class="control-label col-lg-6">Leakage</label>
                                <div class="col-lg-3">
                                    <div class="industrial led size one">
                                        <div class="meter green"></div>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="industrial led size one">
                                        <div class="meter green"></div>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="form-group">
                                <label class="control-label col-lg-6">Connection</label>
                                <div class="col-lg-3">
                                    <div class="industrial led size one">
                                        <div class="meter green"></div>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="industrial led size one">
                                        <div class="meter green"></div>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="form-group">
                                <label class="control-label col-lg-4">Timer</label>
                                <div class="col-lg-8">
                                    <input type="text" id="txtID" class="form-control" readonly="readonly">
                                </div>
                            </div>
                            <br /><br />
                            <div class="form-group">
                                <div class="col-lg-4">
                                    <button type="button" class="btn btn-outline btn-success">Start</button>
                                </div><div class="col-lg-4">
